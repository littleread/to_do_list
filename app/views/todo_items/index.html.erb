<p id="notice"><%= notice %></p>


<h1>Todo Items</h1>
    <table class="table table-striped table-bordered table-condensed">
      <thead>
        <tr>
          <th>Task</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @todo_items.each do |todo_item| %>
          <tr>
            <td><%= todo_item.description %></td>
            <td><button type="button" class="btn btn-info button-text"><%= link_to 'View', todo_item %></button></td>
            <td><button type="button" class="btn btn-primary button-text"><%= link_to 'Edit', edit_todo_item_path(todo_item) %></button></td>
            <td><button type="button" class="btn btn-danger button-text"><%= link_to 'Delete', todo_item, method: :delete, data: { confirm: 'Are you sure?' } %></button></td>
          </tr>
        <% end %>
      </tbody>
    </table>
<br>


<button type="button" class="btn btn-success button-text"><%= link_to 'New Todo Item', new_todo_item_path %></button>
